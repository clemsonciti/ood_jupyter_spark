# Job submission configuration file
#
---

batch_connect:
  template: "basic"

script:
  native:
    - "-N"
    - "j_spark"
    - "-q"
    - "<%= pbs_queue %>"
    - "-l"
    - "select=<%= pbs_select %>:ncpus=<%= pbs_ncpus %>:mpiprocs=<%= pbs_ncpus %>:mem=<%= pbs_mem %><%= pbs_interconnect %><%= pbs_ngpus %><%= pbs_gpu_model %><%= pbs_extras %>,walltime=<%= pbs_walltime %>"

